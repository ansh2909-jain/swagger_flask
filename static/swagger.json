{
    "swagger": "2.0",
    "info": {
      "title": "Student Management API",
      "version": "1.0.0",
      "description": "API for managing student records with basic authentication."
    },
    "basePath": "/",
    "schemes": ["http"],
    "paths": {
      "/hello": {
        "get": {
          "summary": "Greet authenticated user",
          "responses": {
            "200": {
              "description": "Success",
              "schema": {
                "type": "object",
                "properties": {
                  "message": { "type": "string" }
                }
              }
            }
          }
        }
      },
      "/goodbye": {
        "get": {
          "summary": "Redirect to /students/",
          "responses": {
            "302": {
              "description": "Redirect"
            }
          }
        }
      },
      "/students/": {
        "get": {
          "summary": "List all students",
          "responses": {
            "200": {
              "description": "Successful fetch of student list",
              "schema": {
                "type": "array",
                "items": { "$ref": "#/definitions/Student" }
              }
            }
          }
        }
      },
      "/create/": {
        "post": {
          "summary": "Create new student",
          "parameters": [
            {
              "name": "firstname",
              "in": "formData",
              "required": true,
              "type": "string"
            },
            {
              "name": "lastname",
              "in": "formData",
              "required": true,
              "type": "string"
            },
            {
              "name": "email",
              "in": "formData",
              "required": true,
              "type": "string"
            },
            {
              "name": "age",
              "in": "formData",
              "required": true,
              "type": "integer"
            },
            {
              "name": "bio",
              "in": "formData",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "302": { "description": "Redirect to student list after creation" }
          }
        }
      },
      "/{student_id}/edit/": {
        "post": {
          "summary": "Edit student by ID",
          "parameters": [
            {
              "name": "student_id",
              "in": "path",
              "required": true,
              "type": "integer"
            },
            {
              "name": "firstname",
              "in": "formData",
              "type": "string"
            },
            {
              "name": "lastname",
              "in": "formData",
              "type": "string"
            },
            {
              "name": "email",
              "in": "formData",
              "type": "string"
            },
            {
              "name": "age",
              "in": "formData",
              "type": "integer"
            },
            {
              "name": "bio",
              "in": "formData",
              "type": "string"
            }
          ],
          "responses": {
            "302": { "description": "Redirect to students list after editing" }
          }
        }
      },
      "/{student_id}/delete/": {
        "post": {
          "summary": "Delete student by ID",
          "parameters": [
            {
              "name": "student_id",
              "in": "path",
              "required": true,
              "type": "integer"
            }
          ],
          "responses": {
            "302": { "description": "Redirect after deletion" }
          }
        }
      }
    },
    "definitions": {
      "Student": {
        "type": "object",
        "properties": {
          "firstname": { "type": "string" },
          "lastname": { "type": "string" },
          "email": { "type": "string" },
          "age": { "type": "integer" },
          "bio": { "type": "string" }
        }
      }
    }
  }